<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_space">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/full_space"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tv_in_time_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date_info"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/full_space" />

        <TextView
            android:id="@+id/tv_out_time_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date_info"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/full_space" />

        <TextView
            android:id="@+id/tv_project_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_in_time_info"
            android:layout_toStartOf="@+id/tv_topic_info"
            android:singleLine="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/full_space" />

        <TextView
            android:id="@+id/tv_topic_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_in_time_info"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/full_space" />

        <TextView
            android:id="@+id/tv_time_spent_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_project_info"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/full_space" />

        <TextView
            android:id="@+id/tv_note_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_spent_info"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/full_space" />

        <ImageButton
            android:id="@+id/ib_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/full_space"
            android:background="@null"
            android:src="@drawable/ic_delete_black_24dp" />

        <ImageButton
            android:id="@+id/ib_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/full_space"
            android:layout_toStartOf="@+id/ib_delete"
            android:background="@null"
            android:src="@drawable/ic_edit_black_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
